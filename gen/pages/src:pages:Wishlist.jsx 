import React, { useContext } from 'react';
import { Link } from 'react-router-dom';
import { motion } from 'framer-motion';
import { Heart, X } from 'lucide-react';
import { Button } from '@/components/ui/button';
import { WishlistContext } from '@/context/WishlistContext';
import { toast } from '@/components/ui/use-toast';

const Wishlist = () => {
  const { wishlist, toggleWishlist } = useContext(WishlistContext);

  const handleRemove = (productId) => {
    toggleWishlist(productId);
    toast({ title: "Removed from Wishlist" });
  };

  return (
    <div className="min-h-screen bg-white">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <motion.h1 initial={{ opacity: 0, y: 20 }} animate={{ opacity: 1, y: 0 }} transition={{ duration: 0.6 }} className="text-5xl md:text-6xl mb-8">My Wishlist</motion.h1>
        
        {wishlist.length === 0 ? (
          <div className="text-center py-20">
            <Heart className="h-20 w-20 text-gray-300 mx-auto mb-6" />
            <h2 className="text-4xl mb-4">Your wishlist is empty</h2>
            <p className="text-gray-500 mb-8">Save your favorite items here to shop them later.</p>
            <Link to="/shop">
              <Button size="lg" className="px-10 py-6 text-base">Discover Products</Button>
            </Link>
          </div>
        ) : (
          <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            {wishlist.map((product, index) => (
              <motion.div
                key={product.id}
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ duration: 0.6, delay: index * 0.1 }}
                className="group"
              >
                <div className="product-card bg-white rounded-lg overflow-hidden relative">
                  <Link to={`/product/${product.id}`} className="block">
                    <div className="aspect-[3/4] overflow-hidden bg-gray-100">
                      <img  className="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" alt={product.name} src="https://images.unsplash.com/photo-1635865165118-917ed9e20936" />
                    </div>
                  </Link>
                  <Button variant="ghost" size="icon" className="absolute top-2 right-2 bg-white/50 hover:bg-white rounded-full" onClick={() => handleRemove(product.id)}>
                    <X className="h-5 w-5 text-black" />
                  </Button>
                  <div className="p-4 text-center">
                    <h3 className="font-sans font-medium text-lg mb-1">{product.name}</h3>
                    <p className="text-gray-600 text-lg">${product.price}</p>
                  </div>
                </div>
              </motion.div>
            ))}
          </div>
        )}
      </div>
    </div>
  );
};

export default Wishlist;